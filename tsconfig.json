{
  "compilerOptions": {
    "target": "ES6",                         // Ensures compatibility
    "module": "ESNext",                      // Use ESM for modern bundlers
    "jsx": "react-jsx",                      // React 17+ JSX transform
    "declaration": true,                     // Emit .d.ts files
    "outDir": "dist",                        // Output directory
    "strict": true,                          // Enable all strict type-checking
    "moduleResolution": "node",             // Node-style resolution
    "esModuleInterop": true,                 // Allow default imports from CommonJS
    "skipLibCheck": true,                    // Skip checking .d.ts files from libs
    "forceConsistentCasingInFileNames": true // Helps on case-sensitive file systems
  },
  "include": ["src/**/*", "ForMe.ts"],       // Use glob for src
  "exclude": ["dist", "node_modules", "**/*.test.tsx"] // Avoid output/conflicts
}
